<div class="container mt-4">
  <h1>Edit Local</h1>
 {{#if msg}}
    <p class='{{msg_type}}'>{{msg}}</p>
    {{/if}}
  <form id="editLocalForm" action="/locals/editlocal/{{local.id}}" method="POST">
    <div class="mb-3">
      <label for="localName">Local Name:</label>
      <input type="text" class="form-control" id="localName" name="localName"  required>
    </div>

    <div class="mb-3">
      <label for="localDescription">Local Description:</label>
      <input type="text" class="form-control" id="localDescription" name="localDescription"  required>
    </div>

    <button type="submit" class="submit">Guardar alterações</button>
  </form>
</div>





